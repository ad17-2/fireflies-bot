{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "strictNullChecks": false,
    "strict": false
  },
  "include": ["src/**/*", "jest.config.ts"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
